# Telegram Bot
BOT_TOKEN=your_telegram_bot_token
WEBHOOK_URL=your_webhook_url # optional

# MongoDB
MONGO_URI=mongodb://mongodb:27017/remnawave-bot
# Optional Cookie for Remnawave API (e.g., for session-based auth alongside or instead of token)
MONGO_USER=admin
MONGO_PASSWORD=password

# Remnawave API
REMNAWAVE_API_URL=https://panel.example.xxx # Example API URL
REMNAWAVE_API_TOKEN=your_remnawave_api_token
# REMWAVE_API_COOKIE=""

# Payment Systems
TELEGRAM_STARS_TOKEN=your_telegram_stars_token
CRYPTOBOT_TOKEN=your_cryptobot_token

# Bot Settings
HELP_URL=https://t.me/your_help_channel
CHANNEL_URL=https://t.me/your_channel

# Tariff Coefficients (for dynamic tariff constructor)
# Price is calculated as: MONTH_X_COEFF * GB_Y_BASE_PRICE * CONNECTIONS_Z_COEFF
# All prices/coefficients resulting in RUB.
MONTH_1=1
MONTH_3=2.5
MONTH_6=4.5
MONTH_12=7.5
GB_50=100
GB_100=180
GB_250=350
GB_1000=1000 # 1TB
GB_5000=4000 # 5TB
CONNECTIONS_5=1
CONNECTIONS_10=1.3
CONNECTIONS_25=1.5
CONNECTIONS_100=2

# Trial Period
TRIAL_ENABLED=true
TRIAL_DURATION_DAYS=3 # Duration in days
TRIAL_TRAFFIC_GB=1    # Traffic in GB

# Referral Program
REFERRAL_ENABLED=true
REFERRAL_BONUS_DAYS=7 # Bonus days for successful referral

# Inbound UUIDs for new users (comma separated)
INBOUND_UUIDS=uuid1,uuid2,uuid3